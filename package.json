{
  "name": "novawaveui",
  "version": "1.0.0",
  "description": "The base of the NovaWaveUI monorepo",
  "type": "module",
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "build": "pnpm -w dlx turbo run build",
    "build:fast": "pnpm -w dlx turbo run build:fast",
    "dev": "pnpm -w dlx turbo run dev",
    "test": "pnpm -w dlx turbo run test",
    "lint": "pnpm -w dlx turbo run lint",
    "typeCheck": "pnpm -w dlx turbo run typeCheck",
    "clean": "pnpm -w dlx turbo run clean",
    "clean:dist": "pnpm -w dlx turbo run clean:dist",
    "storybook": "pnpm --filter storybook run storybook",
    "prepare": "husky"
  },
  "keywords": [
    "novawaveui",
    "react",
    "ui",
    "components",
    "design system",
    "headless"
  ],
  "author": "Kyle Gagnon",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@novawaveui/tailwind-composer": "^1.3.1",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.5",
    "axe-core": "^4.10.3",
    "clean-package": "^2.2.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "plop": "^4.0.1",
    "prettier": "3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "storybook": "^9.1.3",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  }
}
