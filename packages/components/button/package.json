{
  "name": "@novawaveui/button",
  "version": "1.0.0",
  "description": "The NovaWaveUI button component",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./button.css": "./src/button.css"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts",
    "build:fast": "tsup src/index",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write . ../../../.prettierrc --ignore-path ../../../.prettierignore",
    "clean:dist": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean": "pnpm run clean:dist && pnpm run clean:node_modules",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "@novawaveui/theme": ">=1.0.0",
    "react": ">=19.0.0"
  },
  "dependencies": {
    "@novawaveui/aria-button": "workspace:*"
  },
  "devDependencies": {
    "@novawaveui/eslint-config": "workspace:*",
    "@novawaveui/theme": "workspace:*",
    "@novawaveui/typescript-config": "workspace:*",
    "@novawaveui/vitest-config": "workspace:*",
    "react": "catalog:"
  },
  "clean-package": "../../../build/clean-package.config.json",
  "keywords": [],
  "author": "Kyle Gagnon",
  "license": "MIT"
}
