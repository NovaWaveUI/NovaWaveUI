{
  "name": "@novawaveui/theme",
  "version": "1.0.0",
  "description": "The default theme configuration for NovaWaveUI",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./theme.css": "./theme.css"
  },
  "files": [
    "dist/",
    "theme.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts",
    "build:fast": "tsup src/index",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write . ../../../.prettierrc --ignore-path ../../../.prettierignore",
    "clean:dist": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean": "pnpm run clean:dist && pnpm run clean:node_modules",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "devDependencies": {
    "@novawaveui/eslint-config": "workspace:*",
    "@novawaveui/typescript-config": "workspace:*",
    "@novawaveui/vitest-config": "workspace:*"
  },
  "keywords": [
    "theme",
    "ui",
    "novawaveui",
    "design",
    "system",
    "tailwindcss",
    "tailwind"
  ],
  "clean-package": "../../../build/clean-package.config.json",
  "author": "Kyle Gagnon",
  "license": "MIT"
}
