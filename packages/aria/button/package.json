{
  "name": "@novawaveui/aria-button",
  "version": "1.0.0",
  "description": "A headless UI button component for React, using React-Aria",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "dependencies": {
    "@react-aria/button": "^3.14.1",
    "@react-aria/focus": "catalog:",
    "@react-aria/interactions": "catalog:",
    "@react-aria/utils": "catalog:",
    "@react-types/button": "^3.14.0",
    "@react-types/shared": "catalog:",
    "@novawaveui/react-utils": "workspace:*"
  },
  "devDependencies": {
    "@novawaveui/eslint-config": "workspace:*",
    "@novawaveui/typescript-config": "workspace:*",
    "@novawaveui/vitest-config": "workspace:*"
  },
  "keywords": [
    "headless",
    "ui",
    "react",
    "button",
    "aria",
    "accessibility"
  ],
  "clean-package": "../../../build/clean-package.config.json",
  "author": "Kyle Gagnon",
  "license": "MIT"
}
