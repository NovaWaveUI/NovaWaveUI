{
  "name": "@novawaveui/aria-checkbox",
  "version": "1.0.0",
  "description": "A fully accessible headless checkbox component for React.",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts",
    "build:fast": "tsup src/index",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write . ../../../.prettierrc --ignore-path ../../../.prettierignore",
    "clean:dist": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean": "pnpm run clean:dist && pnpm run clean:node_modules",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "dependencies": {
    "@novawaveui/core": "workspace:*",
    "@novawaveui/react-utils": "workspace:*",
    "@novawaveui/types": "workspace:*",
    "@novawaveui/use-safe-layout-effect": "workspace:*",
    "@novawaveui/utils": "workspace:*",
    "@react-aria/checkbox": "^3.16.1",
    "@react-aria/focus": "catalog:",
    "@react-aria/interactions": "catalog:",
    "@react-aria/utils": "catalog:",
    "@react-stately/checkbox": "^3.7.1",
    "@react-stately/toggle": "^3.9.1",
    "@react-types/checkbox": "^3.10.1",
    "@react-types/shared": "catalog:"
  },
  "devDependencies": {
    "@novawaveui/eslint-config": "workspace:*",
    "@novawaveui/typescript-config": "workspace:*",
    "@novawaveui/vitest-config": "workspace:*",
    "react": "catalog:"
  },
  "keywords": [
    "headless",
    "ui",
    "react",
    "button",
    "aria",
    "accessibility"
  ],
  "clean-package": "../../../build/clean-package.config.json",
  "author": "Kyle Gagnon",
  "license": "MIT"
}
