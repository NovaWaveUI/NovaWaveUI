{
  "name": "@novawaveui/react",
  "version": "1.0.0",
  "description": "NovaWaveUI's React component library",
  "type": "module",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "vite build --mode production --minify terser",
    "build:fast": "tsup",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write . ../../.prettierrc --ignore-path ../../.prettierignore",
    "clean:dist": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean": "pnpm run clean:dist && pnpm run clean:node_modules"
  },
  "peerDependencies": {
    "@novawaveui/theme": ">=1.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "dependencies": {
    "@novawaveui/types": "workspace:*",
    "@react-aria/button": "^3.14.1",
    "@react-aria/focus": "catalog:",
    "@react-aria/interactions": "catalog:",
    "@react-aria/utils": "catalog:",
    "@react-types/button": "^3.14.0",
    "@react-types/shared": "catalog:",
    "clsx": "^2.1.1",
    "react-aria": "^3.43.2",
    "react-stately": "^3.41.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@heroicons/react": "^2.2.0",
    "@novawaveui/eslint-config": "workspace:*",
    "@novawaveui/theme": "workspace:*",
    "@novawaveui/typescript-config": "workspace:*",
    "@novawaveui/vitest-config": "workspace:*",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^5.0.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "next": "^15.5.4",
    "react": "catalog:",
    "react-dom": "catalog:",
    "rollup-plugin-visualizer": "^6.0.5",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [],
  "author": "Kyle Gagnon <kmgagnon99@gmail.com>",
  "license": "MIT"
}
